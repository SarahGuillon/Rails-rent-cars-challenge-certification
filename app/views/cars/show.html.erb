
<div class="container mt-5">
  <div class="back-index mt-2 mb-2">
    <%= link_to "< Back to cars list", cars_path %>
  </div>
  <div class="card-car">
    <div class="card-information">
      <div class="title mt-2 mb-5">
        <h1> <i class="fas fa-car-alt"></i> <%= @car.brand %> <%= @car.model %> </h1>
      </div>
      <div class="description">
        <p class="price"> <strong> <%= @car.price_per_day %> â‚¬/day </strong> </p>
        <p> Year of production : <%= @car.year_of_production %></p>
        <p> <i class="fas fa-map-marker"></i> <%= @car.address %></p>
        <p> <i class="fas fa-envelope"></i> <%= @user.email %></p>
      </div>
    </div>
    <div class="form-wrapper">
      <%= simple_form_for [ @car, @booking ] do |f| %>
        <p>Start date*</p>
          <%= f.date_field :starts_at, as: :string, class:"form-control text optional" %>
          <p>End date*</p>
          <%= f.date_field :ends_at, class:"form-control text optional" %>
        <%= f.submit "Book", class: "btn btn-primary mt-4" %>
      <% end %>
    </div>
  </div>
</div>
